@using MvcWatchStore.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<MvcWatchStore.Models.WATCH>

@{
    ViewBag.Title = "Tìm kiếm";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="col-sm-12 col-md-12 col-lg-12 p-b-50" >
    <!--  -->
    
            <div class="form-group" style="background-color:Black">
                @using (Html.BeginForm("TimKiem", "TimKiem", FormMethod.Get))
                {
                    <b style="color:white">Search:</b>@Html.TextBox("search","",new {@style="margin:5px;" })<input type="submit" value="Tìm kiếm" class="btn btn-primary" />
                }
            </div>




    <!-- Product -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-12 col-md-6 col-lg-4 p-b-50">
                <!-- Block2 -->
                <div class="block2">
                    <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                        <img src="~/images/products/@item.Img" alt="IMG-PRODUCT">

                        <div class="block2-overlay trans-0-4">
                            <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                                <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                                <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                            </a>

                            <div class="block2-btn-addcart w-size1 trans-0-4">
                                <!-- Button -->
                                <button class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="block2-txt p-t-20">
                        <a href="product-detail.html" class="block2-name dis-block s-text3 p-b-5">
                            <b>@item.WatchName</b>
                        </a>

                        <span class="block2-price m-text6 p-r-5" style="color:red">
                            @String.Format("{0:0,0}", item.Cost) VNĐ
                        </span>
                    </div>
                </div>
            </div>
        }

        <!-- Pagination -->
        <div class="container">
            <div class="row justify-content-center">

                <div class="MenuTrang">
                    @Html.PagedListPager(Model, page => Url.Action("SPTheoThuongHieu", new { page = page }))

                </div>
                <p class="text-center" style="padding:10px;">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount</p>
            </div>
        </div>
        <style>
            .MenuTrang li {
                display: inline;
                padding: 10px;
            }
        </style>
    </div>
</div>